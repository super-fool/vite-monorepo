{
	"compilerOptions": {
		"target": "es5",
		"module": "esnext",
		"moduleResolution": "node",
		"experimentalDecorators": true,
		"strict": true,
		"lib": ["esnext", "dom"],
		"types": ["vite/client"],
		"plugins": [
			{
				"name": "@vuedx/typescript-plugin-vue"
			}
		]
	},
	"include": ["src/**/*.ts", "src/**/*.vue"],
	"exclude": ["node_modules", "dist"]
}
