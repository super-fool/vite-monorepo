{
	"name": "keytop-monorepo",
	"private": true,
	"license": "ISC",
	"workspaces": [
		"platform-apps/city-app",
		"platform-apps/hardware-app",
		"packages/create-app",
		"packages/godzilla"
	],
	"scripts": {
		"initialize": "tsc ./scripts/initialize.ts && ts-node ./scripts/initialize",
		"refresh": "lerna bootstrap",
		"list": "lerna ls",
		"build": "lerna run build --stream",
		"build:city": "lerna run --stream --scope=@keytop-monorepo/hardware build",
		"build:hardware": "lerna run build --stream --scope=@keytop-monorepo/hardware",
		"dev:city": "lerna run --scope=@keytop-monorepo/hardware dev",
		"dev:hardware": "lerna run --scope=@keytop-monorepo/hardware dev"
	},
	"dependencies": {
		"lerna": "^4.0.0",
		"react": "^17.0.2",
		"react-dom": "^17.0.2"
	},
	"devDependencies": {
		"@types/node": "^16.0.1",
		"chalk": "^4.1.1",
		"ts-node": "^10.0.0",
		"typescript": "^4.3.5"
	}
}
