{
  "compilerOptions": {
    "target": "esnext",
    "module": "esnext",
    "noImplicitAny": true,
    "moduleResolution": "node",
    "removeComments": true,
    "declaration": false,
    "jsx": "preserve",
    "sourceMap": true,
    "resolveJsonModule": true,
    "esModuleInterop": true,
    "lib": [
      "esnext",
      "dom"
    ],
  },
  "plugins": [
    {
      "name": "@vuedx/typescript-plugin-vue"
    },
    {
      "name": "eslint-plugin-vue"
    }
  ],
  "include": [
    "src/**/*.ts",
    "src/**/*.js",
    "src/**/*.d.ts",
    "src/**/*.vue"
  ]
}